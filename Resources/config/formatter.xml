<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="rollerworks_search.chain_formatter" class="Rollerworks\Component\Search\Formatter\ChainFormatter" />
        <service id="rollerworks_search.formatter" alias="rollerworks_search.chain_formatter" />
        <service id="rollerworks_search.formatter.transformer" class="Rollerworks\Component\Search\Formatter\TransformFormatter">
            <tag name="rollerworks_search.formatter" priority="1000"/>
        </service>
        <service id="rollerworks_search.formatter.validator" class="Rollerworks\Component\Search\Formatter\ValidationFormatter">
            <tag name="rollerworks_search.formatter" priority="800"/>
            <argument type="service" id="validator" />
        </service>
        <service id="rollerworks_search.formatter.duplicate_remove" class="Rollerworks\Component\SearchFormatter\DuplicateRemover" public="false">
            <tag name="rollerworks_search.formatter" priority="500"/>
        </service>
        <service id="rollerworks_search.formatter.values_to_range" class="Rollerworks\Component\SearchFormatter\ValuesToRange" public="false">
            <tag name="rollerworks_search.formatter" priority="300"/>
        </service>
        <service id="rollerworks_search.formatter.range_optimizer" class="Rollerworks\Component\SearchFormatter\RangeOptimizer" public="false">
            <tag name="rollerworks_search.formatter" priority="100"/>
        </service>
    </services>
</container>
